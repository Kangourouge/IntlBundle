{% extends '@EasyAdmin/default/layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% trans_default_domain 'admin' %}

{% block content_title %}
    <span class="fa fa-globe"></span> {{ 'Translation'|trans }}
{% endblock %}

{% block main %}
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">
                {{ 'Import'|trans }}
            </h3>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">
                {{ 'Export'|trans }}
            </h3>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <a href="{{ path('krg_intl_admin_export') }}" class="btn btn-primary">
                        {{ 'Export translations'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
